<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainBorderPane" prefHeight="650.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.inventory.warehouseinventorysystem.controller.MainViewController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="menuItemExit" mnemonicParsing="false" onAction="#handleExitAction" text="Exit"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Manage">
                    <items>
                        <MenuItem fx:id="menuItemManageWarehouses" mnemonicParsing="false" onAction="#handleManageWarehousesAction" text="Warehouses..."/>
                        <MenuItem fx:id="menuItemManageProducts" mnemonicParsing="false" onAction="#handleManageProductsAction" text="Products..."/>
                        <MenuItem fx:id="menuItemImportLegacyProduct" mnemonicParsing="false" onAction="#handleImportLegacyProductAction" text="Import Legacy Product (Demo)"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem fx:id="menuItemAbout" mnemonicParsing="false" onAction="#handleAboutAction" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <left>
        <VBox prefHeight="569.0" prefWidth="280.0" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Warehouses"/>
                <ListView fx:id="warehouseListView" prefHeight="450.0" prefWidth="200.0" VBox.vgrow="ALWAYS"/>
                <HBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Button fx:id="addWarehouseButton" mnemonicParsing="false" onAction="#handleAddWarehouseAction" text="Add"/>
                        <Button fx:id="editWarehouseButton" mnemonicParsing="false" onAction="#handleEditWarehouseAction" text="Edit" disable="true"/>
                        <Button fx:id="deleteWarehouseButton" mnemonicParsing="false" onAction="#handleDeleteWarehouseAction" text="Delete" disable="true"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </left>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <Label fx:id="selectedWarehouseLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Products in: (No Warehouse Selected)"/>
                <TableView fx:id="productTableView" prefHeight="450.0" prefWidth="559.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="productSkuColumn" prefWidth="100.0" text="SKU"/>
                        <TableColumn fx:id="productNameColumn" prefWidth="200.0" text="Name"/>
                        <TableColumn fx:id="productQuantityColumn" prefWidth="75.0" text="Quantity"/>
                        <TableColumn fx:id="productPriceColumn" prefWidth="100.0" text="Price"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
                <HBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Button fx:id="addProductButton" mnemonicParsing="false" onAction="#handleAddProductAction" text="Add Product" disable="true"/>
                        <Button fx:id="editProductButton" mnemonicParsing="false" onAction="#handleEditProductAction" text="Edit Product" disable="true"/>
                        <Button fx:id="deleteProductButton" mnemonicParsing="false" onAction="#handleDeleteProductAction" text="Delete Product" disable="true"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
    <bottom>
        <Label fx:id="statusLabel" text="Status: Ready" BorderPane.alignment="CENTER_LEFT">
            <padding>
                <Insets bottom="5.0" left="10.0" right="5.0" top="5.0"/>
            </padding>
        </Label>
    </bottom>
</BorderPane>